<?xml version="1.0"?>
<ruleset name="WordPress Plugin Coding Standards Configuration">
	<!-- Set a description for this ruleset. -->
	<description>Code standard rules to check against a WordPress Plugin.</description>

	<exclude-pattern>tests/*</exclude-pattern>

	<!-- Include the WordPress ruleset, with exclusions. -->
	<rule ref="WordPress-VIP">
		<!-- These may need to be excluded if they throw too many false positives -->
		<!-- <exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect" /> -->
		<!-- <exclude name="Generic.WhiteSpace.ScopeIndent.IncorrectExact" /> -->
		<!-- <exclude name="PEAR.Functions.FunctionCallSignature.Indent" /> -->
	</rule>

	<!-- Exception for allowed media sideloading -->
	<rule ref="WordPress.VIP.FileSystemWritesDisallow.FileWriteDetected">
		<exclude-pattern>modules/class-simplechart-save.php</exclude-pattern>
		<exclude-pattern>modules/class-simplechart-wp-cli.php</exclude-pattern>
	</rule>

	<!-- Class declarations that require MEXP -->
	<rule ref="Squiz.Commenting.LongConditionClosingComment.Missing">
		<exclude-pattern>modules/class-simplechart-mexp.php</exclude-pattern>
	</rule>

	<!-- Tweak the VIP rules -->
	<rule ref="WordPress.XSS.EscapeOutput.OutputNotEscaped">
		<type>warning</type>
	</rule>

</ruleset>